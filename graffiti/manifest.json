{
    "manifest_version": 2,
  
    "name": "Graffiti",
    "description": "This extension covers up hate speech with beautiful art.",
    "version": "1.0",
    
    "icons": {
      "16": "icon16.png",
      "48": "icon48.png",
      "128": "icon128.png"
    },
    
    "browser_action": {
      "default_popup": "popup/index.html",
      "default_title": "Graffiti"
    },
  
    "permissions": [],
  
    "content_scripts": [
      {
        "matches": ["<all_urls>"],
        "js": [
          "scripts/libs/jquery-3.2.1.min.js",
          "scripts/env.js",
          "scripts/graffiti.js"
        ],
        "run_at": "document_end"
      }
    ]
  }
  